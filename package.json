{
    "name": "sigmaarena-vm",
    "version": "1.0.16",
    "description": "SigmaArena VM - SN127",
    "main": "build/index.js",
    "bin": {
        "sigmaarena-vm": "build/index.js"
    },
    "scripts": {
        "build": "tsc && node ./dist/utils/copy_files.js",
        "buildMain": "tsc && node ./dist/utils/copy_files.js",
        "start": "node dist/index.js",
        "build-sandbox-image": "docker build -f src/sandbox/Dockerfile -t trading-sandbox:latest .",
        "cli": "ts-node src/index.ts",
        "simulate-trade": "npm run cli simulate-trade",
        "prepublishOnly": "rm -rf build && mkdir build && cp -r dist/* build",
        "build:publish": "npm run build && npm publish --access public"
    },
